<h2>Displaying Single Clothing Item</h2>

<dl>
  <dt>Clothing Type</dt>
  <dd><%= @clothing_item.clothing_type %></dd>
  <dt>Clothing Material</dt>
  <dd><%= @clothing_item.clothing_material %></dd>
  <dt>Clothing Color</dt>
  <dd><%= @clothing_item.clothing_color %></dd>
</dl>

<a href="/clothing_items">View Complete List</a></br>
<a href="/clothing_items/<%= @clothing_item.id %>/edit">Edit</a></br>

<form action="/clothing_items/<%= @clothing_item.id %>" method="post">
  <input type="hidden" name="_method" value="delete" />
  <input name="authenticity_token" type="hidden" value="form_authenticity_token" />
  <input type="submit" value="Delete Item"/>
</form>